<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_clubmanagement/models/fields" >
		<field name="person_id" type="modal_persons" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_PERSON_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_PERSON_DESC"
			size="40"
			required="true"
			household="false"
			excludeCurrentId="false" />

		<field name="type" type="cmselection" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_TYPE_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_TYPE_DESC"
			size="25"
			required="true"
			paramname="member_types"
			hide_none="true" />

		<field name="begin" type="calendar" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_BEGIN_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_BEGIN_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
			required="true" />

		<field name="end" type="calendar" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_END_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_END_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
			required="false" />

		<field name="published" type="list" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_PUBLISHED_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_PUBLISHED_DESC"
			class="chzn-color"
			size="1"
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true" />

		<field name="catid" type="category" extension="com_clubmanagement" class="inputbox" default=""
			label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_CATID_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_CATID_DESC"
			required="false"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>

		<field name="createdby" type="text" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_CREATEDBY_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_CREATEDBY_DESC"
			required="false"
			readonly="true" />

		<field name="createddate" type="calendar" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_CREATEDDATE_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_CREATEDDATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
			required="false"
			readonly="true" />

		<field name="modifiedby" type="text" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_MODIFIEDBY_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_MODIFIEDBY_DESC"
			required="false"
			readonly="true" />

		<field name="modifieddate" type="calendar" label="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_MODIFIEDDATE_LABEL"
			description="COM_CLUBMANAGEMENT_MEMBERSHIPS_FIELD_MODIFIEDDATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
			required="false"
			readonly="true" />
	</fieldset>
</form>
