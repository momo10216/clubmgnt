<?xml version="1.0" encoding="iso-8859-1"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
	<name>ClubManagement Birthday</name>
	<creationDate>July 2011</creationDate>
	<author>Norbert Kuemin</author>
	<authorEmail>momo_102@bluemail.ch</authorEmail>
	<copyright>(C) 2011 Norbert Kuemin</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>2.5.2</version>
	<description>Show birthday of members.</description>
	<files>
		<filename module="mod_cm_birthday">mod_cm_birthday.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_cm_birthday.ini</language>
		<language tag="de-DE">de-DE.mod_cm_birthday.ini</language>
	</languages>
	<media />
	<config>
		<fields name="params">
			<fieldset name="basic"
				  addfieldpath="/administrator/components/com_clubmanagement/elements">
				<field name="membertype" type="cmmembertype" label="MEMBERSHIP_TYPE_LABEL" description="MEMBERSHIP_TYPE_DESCRIPTION"/>
				<field name="memberstate" type="list" default="current" label="MEMBERSHIP_STATE_LABEL" description="MEMBERSHIP_STATE_DESCRIPTION">
					<option value="current">Current</option>
					<option value="closed">Terminated</option>
					<option value="all">JALL</option>
				</field>
				<field name="publicity" type="list" default="published" label="PUBLICITY_STATE_LABEL" description="PUBLICITY_STATE_DESCRIPTION">
					<option value="all">JALL</option>
					<option value="published">JPUBLISHED</option>
					<option value="unpublished">JUNPUBLISHED</option>
				</field>
				<field name="days_before" type="text" size="2" default="6" label="DAYS_BEFORE_LABEL" description="DAYS BEFORE_DESCRIPTION"/>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="column_1" type="cmmembercolumn" columntype="view" default="" label="FIELD_1_LABEL" description="FIELD_1_DESCRIPTION"/>
				<field name="column_2" type="cmmembercolumn" columntype="view" default="" label="FIELD_2_LABEL" description="FIELD_2_DESCRIPTION"/>
				<field name="column_3" type="cmmembercolumn" columntype="view" default="" label="FIELD_3_LABEL" description="FIELD_3_DESCRIPTION"/>
				<field name="column_4" type="cmmembercolumn" columntype="view" default="" label="FIELD_4_LABEL" description="FIELD_4_DESCRIPTION"/>
				<field name="column_next" type="list" default="1" label="FIELD_UPCOMMING_LABEL" description="FIELD_UPCOMMING_DESCRIPTION">
					<option value=""></option>
					<option value="1">FIELD_UPCOMMING_OPTION_1</option>
					<option value="2">FIELD_UPCOMMING_OPTION_2</option>
					<option value="3">FIELD_UPCOMMING_OPTION_3</option>
				</field>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="titel_today" type="text" size="50" default="" label="TITEL_NOW_LABEL" description="TITEL_NOW_DESCRIPTION"/>
				<field name="titel_next" type="text" size="50" default="" label="TITEL_NEXT_LABEL" description="TITEL_NEXT_DESCRIPTION"/>
				<field name="delimiter" type="text" size="50" default=", " label="DELIMITER_LABEL" description="DELIMITER_DESCRIPTION"/>
				<field name="css" type="textarea" default="" label="DETAIL_CSS_LABEL" description="DETAIL_CSS_DESCRIPTION" rows="5" cols="50"/>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="detail_enable" type="radio" default="0" label="ENABLE_DETAILS_LABEL" description="ENABLE_DETAILS_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="detail_column_link" type="cmmembercolumn" columntype="view" default="" label="DETAIL_LINK_COLUMN_LABEL" description="DETAIL_LINK_COLUMN_DESCRIPTION"/>
			</fieldset>
		</fields>
	</config>
    <updateservers>
	<server type="extension" priority="2" name="Club Management Updates">http://joomlacode.org/gf/project/clubmgnt/scmsvn/?action=browse&path=%2F*checkout*%2Ftags%2Fupdate%2Fmod_cm_birthday%2Fupdate_2.5.xml</server>
    </updateservers>
</extension>
