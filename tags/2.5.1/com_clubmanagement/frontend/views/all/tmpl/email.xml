<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_CLUBMANAGEMENT_ALL_VIEW_EMAIL_LAYOUT_TITLE" option="COM_CLUBMANAGEMENT_ALL_VIEW_EMAIL_LAYOUT_OPTION">
		<message>
			<![CDATA[COM_CLUBMANAGEMENT_ALL_VIEW_EMAIL_LAYOUT_DESCRIPTION]]>
		</message>
	</layout>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params" addfieldpath="/administrator/components/com_clubmanagement/elements">

		<!-- Basic options. -->
		<fieldset name="basic" label="COM_CLUBMANAGEMENT_BASIC_OPTIONS_FIELDSET_LABEL">
			<field name="max_email_addr" type="text" size="3" default="0" label="MAX_EMAIL_ADDRESS_LABEL" description="MAX_EMAIL_ADDRESS_DESCRIPTION" />
			<field name="target_field" type="list" default="to" label="EMAIL_CLIENT_TARGET_FIELD_LABEL" description="EMAIL_CLIENT_TARGET_FIELD_DESCRIPTION">
				<option value="to">To:</option>
				<option value="cc">CC:</option>
				<option value="bcc">BCC:</option>
			</field>
 			<field name="@spacer" type="spacer" default="" label="" description="" />
			<field name="member_type" type="cmmembertype" size="4" label="MEMBERSHIP_TYPE_EMAIL_LABEL" description="MEMBERSHIP_TYPE_EMAIL_DESCRIPTION" multiple="true" />
			<field name="member_publicity" type="list" default="published" label="PUBLICITY_STATE_LABEL" description="PUBLICITY_STATE_DESCRIPTION">
				<option value="all">JALL</option>
				<option value="published">JPUBLISHED</option>
				<option value="unpublished">JUNPUBLISHED</option>
			</field>
			<field name="member_state_current" type="radio" default="1" label="SHOW_CURRENT_MEMBER_EMAIL_LABEL" description="SHOW_CURRENT_MEMBER_EMAIL_DESCRIPTION">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="member_state_terminated" type="radio" default="0" label="SHOW_TERMINATED_MEMBER_EMAIL_LABEL" description="SHOW_TERMINATED_MEMBER_EMAIL_DESCRIPTION">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
 			<field name="@spacer" type="spacer" default="" label="" description="" />
			<field name="board_state_current" type="radio" default="1" label="SHOW_CURRENT_BOARD_EMAIL_LABEL" description="SHOW_CURRENT_BOARD_EMAIL_DESCRIPTION">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="board_state_terminated" type="radio" default="0" label="SHOW_TERMINATED_BOARD_EMAIL_LABEL" description="SHOW_TERMINATED_BOARD_EMAIL_DESCRIPTION">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
		</fieldset>
	</fields>
</metadata>

